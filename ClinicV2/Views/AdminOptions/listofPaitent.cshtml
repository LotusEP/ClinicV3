@model IEnumerable<ClinicV2.Models.Patient>

@{
    ViewBag.Title = "listofPaitent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>list of Paitent</h2>



<input type="text" id="myInput" onkeyup="searchByClinic()" placeholder="Search for names.." title="Type in a name">
<table id="patientTable" class="table table-striped table-hover table-bordered">
    <tr>
        <th>
           Name
        </th>
   
        <th>
            Phone Number
        </th>
    
        <th>
            Address
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
         
           @item.FirstName @item.LastName
        </td>

      
        <td>
            @Html.DisplayFor(modelItem => item.CellPhone)
        </td>
 
        <td>
            @item.Street @item.City ,@item.State @item.Zip
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
 
        <td>

            @Html.ActionLink("Details", "PatientDetailPage", new { id=item.PatientID }) |
         
        </td>
    </tr>
}

</table>


<script>

    function searchByClinic() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("patientTable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
          
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>
